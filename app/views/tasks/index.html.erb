<% @tasks.each do |task| %>
  <tr>
    <td><%= task.title %></td>
    <td><%= task.description %></td>
    <td><%= task.status %></td>
    <td><%= task.estimate %></td>
    <td><%= task.remaining %></td>
    <td><%= link_to 'Show', story_task_path(@story, task) %></td>
    <td><%= link_to 'Edit', edit_story_task_path(@story, task) %></td>
  </tr>
<% end %>
</table>

