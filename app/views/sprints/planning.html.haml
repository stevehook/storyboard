= page_heading "Planning Sprint - #{@sprint.title}"

%div.leftPanel
  %div.subPanel
    = sub_heading 'Project Backlog'
    %div.listPanel.dragSource.dragTarget{ :'data-status' => 'ready' }
      - @stories.each do |story|
        = render story
%div.rightPanel
  %div.subPanel
    = sub_heading 'Committed Stories'
    %div.listPanel.dragTarget.dragSource{ :'data-status' => 'committed', :'data-sprint' => @sprint.id.to_s }
      - @sprint.stories.each do |story|
        = render story
  %div.subPanel
    = sub_heading "Total points #{@sprint.points_count}", :points_count


