%div.listItem{ :'data-id' => story.id, :'data-priority' => story.priority }
  %span.listItemTitle
    %a{ :href => edit_story_path(story.id) }= story.title
  %span.listItemDetail
    = priority_badge(story)
    = status_badge(story)
    = sprint_badge(story)
  %br
  %span.listItemDetail= story.description
  %span.listItemDetail{ :stylei => 'float: right;' }
