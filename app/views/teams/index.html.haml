%div.releaseMainPanel
  - page_heading 'Team List'
  %div.subPanel
    = sub_heading 'Teams'

    %div.listPanel
      = render @teams.each
    %br
    - if can? :manage, Team
      %div.listItem.noBorder
        = link_to 'Add Team', new_team_path

%div.releaseSidePanel
  %div.subPanel
    = sub_heading 'Unallocated Users'

    %div.listPanel
      - @unallocated_users.each do |user|
        = render 'team_user', :user => user, :team => nil
      %div.clear
    %br
    - if can? :manage, User
      %div.listItem.noBorder
        = link_to 'Add User', new_user_path
